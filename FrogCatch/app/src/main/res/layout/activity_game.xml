<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayouttop"
        android:layout_width="390dp"
        android:layout_height="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/viewName"
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewTimer"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="Timer"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.gridlayout.widget.GridLayout>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="390dp"
        android:layout_height="510dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayoutfoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayouttop">

        <ImageView
            android:id="@+id/viewfrog00"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog01"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog02"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/frog22" />

        //2.row

        <ImageView
            android:id="@+id/viewfrog10"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog11"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog12"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/frog22" />
        //3.row

        <ImageView
            android:id="@+id/viewfrog20"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog21"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/frog22" />

        <ImageView
            android:id="@+id/viewfrog22"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/frog22" />

        // 2. Images 0.row

        <ImageView
            android:id="@+id/viewfrog100"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog101"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog102"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/frog11" />

        // 2. Image 1.row

        <ImageView
            android:id="@+id/viewfrog110"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog111"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog112"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/frog11" />

        //2. Images 2.row

        <ImageView
            android:id="@+id/viewfrog120"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog121"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/frog11" />

        <ImageView
            android:id="@+id/viewfrog122"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:onClick="addScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/frog11" />

    </androidx.gridlayout.widget.GridLayout>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutfoot"
        android:layout_width="390dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/viewMod"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Mod"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/viewHighScore"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="High Dcore"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/viewScore"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Score"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>